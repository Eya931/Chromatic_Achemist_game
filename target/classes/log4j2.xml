<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss}] [%level] %msg%n</Property>
        <Property name="LOG_DIR">logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appender for Game Logs -->
        <RollingFile name="GameLog" 
                     fileName="${LOG_DIR}/chromatic_alchemist.log"
                     filePattern="${LOG_DIR}/chromatic_alchemist-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Separate File for State Changes -->
        <RollingFile name="StateLog" 
                     fileName="${LOG_DIR}/state_changes.log"
                     filePattern="${LOG_DIR}/state_changes-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
        </RollingFile>

        <!-- Separate File for Events -->
        <RollingFile name="EventLog" 
                     fileName="${LOG_DIR}/events.log"
                     filePattern="${LOG_DIR}/events-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Game State Logger -->
        <Logger name="GameState" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="StateLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Player State Logger -->
        <Logger name="PlayerState" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="StateLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Decorator Logger -->
        <Logger name="Decorator" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Entity Logger -->
        <Logger name="Entity" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="EventLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Collision Logger -->
        <Logger name="Collision" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="EventLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Level Logger -->
        <Logger name="Level" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Event Logger -->
        <Logger name="Event" level="INFO" additivity="false">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="EventLog"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="GameLog"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
